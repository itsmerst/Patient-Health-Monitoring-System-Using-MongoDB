<script>
	function submitForm(event) {
  event.preventDefault(); // Prevent the form from submitting normally

  // Collect form field values
  const role = document.getElementById("role").value;

  // Create an object with the collected data
  const formData = {
    role,
  };

  // Handle form fields based on role
  if (role === "patient") {
    const name = document.getElementById("full-name").value;
    const age = document.getElementById("age").value;
    const email = document.getElementById("email1").value;
    const address = document.getElementById("address").value;
    const aadhaar = document.getElementById("aadhaar").value;
    const mobile = document.getElementById("mobile").value;
    const password = document.getElementById("password1").value;

    formData.name = name;
    formData.age = age;
    formData.email = email;
    formData.address = address;
    formData.aadhaar = aadhaar;
    formData.mobile = mobile;
    formData.password = password;
  } else if (role === "doctor") {
    const name = document.getElementById("doctor-full-name").value;
    const mobile = document.getElementById("doctor-mobile_number").value;
    const email = document.getElementById("email2").value;
    const address = document.getElementById("doctor-address").value;
    const license = document.getElementById("medical_license_number").value;
    const specialization = document.getElementById("specialization_area").value;
    const password = document.getElementById("password2").value;

    formData.name = name;
    formData.mobile = mobile;
    formData.email = email;
    formData.address = address;
    formData.license = license;
    formData.specialization = specialization;
    formData.password = password;
  } else if (role === "pharmacist") {
    const name = document.getElementById("shop-name").value;
    const mobile = document.getElementById("pharmacist-mobile_number").value;
    const email = document.getElementById("email3").value;
    const address = document.getElementById("shop-address").value;
